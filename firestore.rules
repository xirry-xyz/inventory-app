rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Global Rule for Invitations (Moved to top)
    match /{path=**}/invitations/{inviteId} {
      allow read: if request.auth != null && resource.data.toEmail == request.auth.token.email;
    }

    // Global Rule for Lists (Required for collectionGroup queries)
    match /{path=**}/lists/{listId} {
      allow read: if request.auth != null && (request.auth.uid in resource.data.members);
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isMemberOfList(listData) {
      return isAuthenticated() && (request.auth.uid in listData.members);
    }

    match /artifacts/{appId} {
      match /users/{userId} {
        allow read, write: if isOwner(userId);

        match /inventory/{itemId} {
          allow read, write: if isOwner(userId);
        }

        match /lists/{listId} {
          allow create: if isOwner(userId);
          allow delete: if isOwner(userId);
          allow read: if isOwner(userId) || isMemberOfList(resource.data);
          
          // Allow update if Owner, Member, or User adding themselves
          allow update: if isOwner(userId) || isMemberOfList(resource.data) ||
                        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'memberEmails']) &&
                         request.resource.data.members.hasAll(resource.data.members) &&
                         request.auth.uid in request.resource.data.members);

          match /items/{itemId} {
            allow read, write: if isOwner(userId);
            allow read, write: if isAuthenticated() && 
              request.auth.uid in get(/databases/$(database)/documents/artifacts/$(appId)/users/$(userId)/lists/$(listId)).data.members;
          }

          match /invitations/{inviteId} {
            allow write: if isOwner(userId);
            allow read: if isOwner(userId);
            // Allow recipient to READ and UPDATE
            allow read, update: if isAuthenticated() && resource.data.toEmail == request.auth.token.email;
          }
        }
      }
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
