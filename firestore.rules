rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isMemberOfList(listData) {
      return isAuthenticated() && (request.auth.uid in listData.members);
    }

    match /artifacts/{appId} {
      match /users/{userId} {
        // Allow access to user profile doc
        allow read, write: if isOwner(userId);

        // 1. Private Inventory Subcollection
        match /inventory/{itemId} {
          allow read, write: if isOwner(userId);
        }

        // 2. Lists Subcollection
        match /lists/{listId} {
          allow create: if isOwner(userId);
          allow delete: if isOwner(userId);
          allow read: if isOwner(userId) || isMemberOfList(resource.data);
          allow update: if isOwner(userId) || isMemberOfList(resource.data);

          // 3. List Items Subcollection (Shared Items)
          match /items/{itemId} {
            // Owner can always access
            allow read, write: if isOwner(userId);
            
            // Members can access if they are in the parent list's members array
            // We use get() to fetch the parent list document
            allow read, write: if isAuthenticated() && 
              request.auth.uid in get(/databases/$(database)/documents/artifacts/$(appId)/users/$(userId)/lists/$(listId)).data.members;
          }

          // 4. Invitations Subcollection
          match /invitations/{inviteId} {
            allow write: if isOwner(userId);
            allow read: if isOwner(userId);
            allow read: if isAuthenticated() && resource.data.toEmail == request.auth.token.email;
          }
        }
      }
      
      // Global Rule for Collection Group Queries (Invitations)
      match /{path=**}/invitations/{inviteId} {
        allow read: if isAuthenticated() && resource.data.toEmail == request.auth.token.email;
      }
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
